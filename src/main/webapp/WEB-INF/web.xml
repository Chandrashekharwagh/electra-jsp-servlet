<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Electra App</display-name>

  <!-- Address Form Servlet -->
  <servlet>
    <servlet-name>addressController</servlet-name>
    <servlet-class>com.electra.web.controller.AddressController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addressController</servlet-name>
    <url-pattern>/addressController</url-pattern>
  </servlet-mapping>

  <!-- Brand Form Servlet -->
  <servlet>
    <servlet-name>BrandController</servlet-name>
    <servlet-class>com.electra.web.controller.BrandController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BrandController</servlet-name>
    <url-pattern>/brand</url-pattern>
  </servlet-mapping>

  <!-- Supplier Form Servlet -->
  <servlet>
    <servlet-name>SupplierController</servlet-name>
    <servlet-class>com.electra.web.controller.SupplierController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SupplierController</servlet-name>
    <url-pattern>/supplier</url-pattern>
  </servlet-mapping>

  <!-- Product Form Servlet -->
  <servlet>
    <servlet-name>ProductController</servlet-name>
    <servlet-class>com.electra.web.controller.ProductController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductController</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>

  <!-- Customer Form Servlet -->
  <servlet>
    <servlet-name>CustomerController</servlet-name>
    <servlet-class>com.electra.web.controller.CustomerController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CustomerController</servlet-name>
    <url-pattern>/customer</url-pattern>
  </servlet-mapping>

  <!-- Order Form Servlet -->
  <servlet>
    <servlet-name>OrderController</servlet-name>
    <servlet-class>com.electra.web.controller.OrderController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrderController</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>

  <!-- Payment Form Servlet -->
  <servlet>
    <servlet-name>PaymentController</servlet-name>
    <servlet-class>com.electra.web.controller.PaymentController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PaymentController</servlet-name>
    <url-pattern>/payment</url-pattern>
  </servlet-mapping>

  <!-- Welcome to file -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
